<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="frank.project01.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nemini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NEMINI"
            android:textAlignment="center"
            android:textSize="45sp"
            android:padding="5sp"/>

        <ImageView
            android:id="@+id/geoff"
            android:src="@drawable/geoff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A Group for MINI Enthusiasts!"
            android:textAlignment="center"
            android:textSize="25sp"
            android:padding="5sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group"
            android:autoLink="web"
            android:text="@string/fb_group_link"
            android:textAlignment="center"
            android:textSize="15sp"
            android:paddingBottom="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/category_title"
            android:text="Videos"
            android:id="@+id/videos_text_view"/>




    </LinearLayout>

</ScrollView>